                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints9)
                    }, {
                        type: "line",
                        name: "Çok Yüksek",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints10)
                    }]
            });
            chart1.render();

            var chart2 = new CanvasJS.Chart("chartContainer2", {
                animationEnabled: true,
                title: {
                    text: "Rezistans"
                },
                axisY: {
                    includeZero: true
                },
                axisX: {
                    includeZero: true
                },
                toolTip: {
                    shared: true
                },
