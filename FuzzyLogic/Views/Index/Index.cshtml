                             dataPoints: @Html.Raw(ViewBag.sicaklikUyelik4)
                         }
                     ]
                 });

             chart3.render();
         }
     </script>
         }
        
            
    @if (ViewBag.seviyeUyelik != null|| ViewBag.seviyeUyelik1 != null || ViewBag.seviyeUyelik2 != null || ViewBag.seviyeUyelik3 != null || ViewBag.seviyeUyelik4 != null)
        {<script>
             function bas1() {


                 var chart4 = new CanvasJS.Chart("chartContainer4",
                     {
                         title: {
                             text: "Seviye"
                         },
                         axisY: {
                             includeZero: true
                         },
                         axisX: {
                             includeZero: true
                         },
                         toolTip: {
                             shared: true
                         },
                         data: [
                             {
                                 type: "line",
                                 name: "Çok Az",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.seviyeUyelik)
                             },
                             {
                                 type: "line",
                                 name: "Az",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.seviyeUyelik1)
                             }, {
                                 type: "line",
                                 name: "Orta",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.seviyeUyelik2)
                             }, {
                                 type: "line",
                                 name: "Çok",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.seviyeUyelik3)
                             },
                             {
                                 type: "line",
                                 name: "Aşırı Çok",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.seviyeUyelik4)
                             }
                         ]
                     });

                 chart4.render();

             }


         </script>}
    
    @if (ViewBag.rezistansUyelik != null || ViewBag.rezistansUyelik1 != null || ViewBag.rezistansUyelik2 != null || ViewBag.rezistansUyelik3 != null || ViewBag.rezistansUyelik4 != null)
    {
    <script>
             function bas2() {


                 var chart5 = new CanvasJS.Chart("chartContainer5",
                     {
                         title: {
                             text: "Rezistans"
                         },
                         axisY: {
                             includeZero: true
                         },
                         axisX: {
                             includeZero: true
                         },
                         toolTip: {
                             shared: true
                         },
                         data: [
                             {
                                 type: "line",
                                 name: "Çok Az",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.rezistansUyelik)
                             },
                             {
                                 type: "line",
                                 name: "Az",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.rezistansUyelik1)
                             }, {
                                 type: "line",
                                 name: "Orta",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.rezistansUyelik2)
                             }, {
                                 type: "line",
                                 name: "Çok",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.rezistansUyelik3)
                             },
                             {
                                 type: "line",
                                 name: "Aşırı Çok",
                                 showInLegend: true,
                                 dataPoints: @Html.Raw(ViewBag.rezistansUyelik4)
                             }
                         ]
                     });

                 chart5.render();

             }


    </script>}
    
    <meta charset="utf-8">
