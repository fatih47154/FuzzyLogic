                    {
                        type: "line",
                        name: "Az",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints12)
                    }, {
                        type: "line",
                        name: "Orta",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints13)
                    }, {
                        type: "line",
                        name: "Çok",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints14)
                    },
                    {
                        type: "line",
                        name: "Aşırı Çok",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints15)
                    }]
            });
            chart2.render();
            
        }
    </script>
    
    @if (ViewBag.sicaklikUyelik != null|| ViewBag.sicaklikUyelik1 != null || ViewBag.sicaklikUyelik2 != null || ViewBag.sicaklikUyelik3 != null || ViewBag.sicaklikUyelik4 != null)
    {<script>
         function bas() {
             var chart3 = new CanvasJS.Chart("chartContainer3",
                 {
                     title: {
                         text: "Sicaklik"
                     },
                     axisY: {
                         includeZero: true
                     },
                     axisX: {
                         includeZero: true
                     },
                     toolTip: {
                         shared: true
                     },
                     data: [
                         {
                             type: "line",
                             name: "Çok Az",
                             showInLegend: true,
                             dataPoints: @Html.Raw(ViewBag.sicaklikUyelik)
                         },
                         {
                             type: "line",
                             name: "Az",
                             showInLegend: true,
                             dataPoints: @Html.Raw(ViewBag.sicaklikUyelik1)
                         }, {
                             type: "line",
                             name: "Orta",
                             showInLegend: true,
                             dataPoints: @Html.Raw(ViewBag.sicaklikUyelik2)
                         }, {
                             type: "line",
                             name: "Çok",
                             showInLegend: true,
                             dataPoints: @Html.Raw(ViewBag.sicaklikUyelik3)
                         },
                         {
                             type: "line",
