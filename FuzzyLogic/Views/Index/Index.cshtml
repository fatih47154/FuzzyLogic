
@{
    Layout = null;
}

<style>
    th {
        background-color: #006666;
        color: white;
        text-align:center;
       }
    tr{
        text-align:center;
    }
    table.ortala {
        width: 1000px;
        height: auto;
        padding: 20px;        
        position: relative;
        margin: auto;
        background-color:antiquewhite;
    }
    h4{
        text-align:center;
    }
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        window.onload = function () {
 
            var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                title: {
                    text: "Product Trends By Month"
                },
                axisY: {
                    includeZero: true
                },
                axisX: {
                    includeZero: true
                },
                toolTip: {
                    shared: true
                },
                data: [{
                    type: "line",
                    name: "Desktops",
                    showInLegend: true,
                    dataPoints: @Html.Raw(ViewBag.DataPoints1)
                }, 
                {
                    type: "line",
                    name: "Laptops",
                    showInLegend: true,
                    dataPoints: @Html.Raw(ViewBag.DataPoints2)
                }, {
                    type: "line",
                    name: "Mobiles",
                    showInLegend: true,
                    dataPoints: @Html.Raw(ViewBag.DataPoints3)
                }, {
                    type: "line",
                    name: "Mobiles1",
                    showInLegend: true,
                    dataPoints: @Html.Raw(ViewBag.DataPoints4)
                }]
            });
            chart.render();
 
        }
    </script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/img/favicon.png">

    <title>Responsive Table</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet"/>
    <link href="/Content/css/table-responsive.css" rel="stylesheet"/>
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet"/>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
        <script src="/Content/js/html5shiv.js"></script>
        <script src="/Content/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <section>
        <!--header start-->
        <header class="header white-bg">
            
            <!--logo start-->
            <a class="logo">Fuzzy<span>Logic</span></a>
            <!--logo end-->
        </header>
        
        <section>
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                               <h4> Bulanık Kural Tabanı</h4>
                            </header>
                            <div class="panel-body">
                                <section>
                                    <table class="table table-bordered table-striped table-condensed ortala">
                                        <thead>
                                        <tr>
                                            <th style="border-right-width: 3px; background-color:#339966">Seviye\Sıcaklık</th>
                                            <th style="border-bottom-width: 3px">Çok Düşük</th>
                                            <th style="border-bottom-width: 3px">Düşük</th>
                                            <th style="border-bottom-width: 3px">Orta</th>
                                            <th style="border-bottom-width: 3px">Yüksek</th>
                                            <th style="border-bottom-width: 3px">Çok Yüksek</th>                                            
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th style="border-right-width: 3px; background-color:#8585ad">Çok Düşük</th>
                                                <td class="numeric">Orta</td>
                                                <td class="numeric">Az</td>
                                                <td class="numeric">Çok Az</td>
                                                <td class="numeric">Çıkışta hareket yok</td>
                                                <td class="numeric">Çıkışta hareket yok</td>                                                
                                             </tr>                                            
                                            <tr>
                                                <th style="border-right-width: 3px; background-color:#8585ad">Düşük</th>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Orta</td>
                                                <td class="numeric">Çok Az</td>
                                                <td class="numeric">Çok Az</td>
                                                <td class="numeric">Çıkışta hareket yok</td>
                                            </tr>
                                            <tr>
                                                <th style="border-right-width: 3px; background-color:#8585ad">Orta</th>
                                                <td class="numeric">Aşırı Çok</td>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Orta</td>
                                                <td class="numeric">Çok Az</td>
                                                <td class="numeric">Çıkışta hareket yok</td>
                                            </tr>
                                            <tr>
                                                <th style="border-right-width: 3px; background-color:#8585ad">Yüksek</th>
                                                <td class="numeric">Aşırı Çok</td>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Az</td>
                                                <td class="numeric">Çıkışta hareket yok</td>
                                            </tr>
                                            <tr>
                                                <th style="border-right-width: 3px; background-color:#8585ad">Çok Yüksek</th>
                                                <td class="numeric">Aşırı Çok</td>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Çok</td>
                                                <td class="numeric">Orta</td>
                                                <td class="numeric">Çıkışta hareket yok</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </section>
                            </div>
                        </section>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Basic Forms
                            </header>
                            <div class="panel-body">
                                <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                                <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
                            </div>
                        </section>
                    </div>

                    <div class="col-lg-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Basic Forms
                            </header>
                            <div class="panel-body">

                            </div>
                        </section>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Basic Forms
                            </header>
                            <div class="panel-body">
                                @if (TempData["Hata"] != null)
                                {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <strong>@TempData["Hata"]</strong>
                                </div>
                                }

                                <form role="form" action="Index1">
                                    <div class="form-group">
                                        <label>Sıcaklık Değerini Giriniz:</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" name="x" placeholder="Sıcaklık Değerini Giriniz..">
                                    </div>

                                    <div class="form-group">
                                        <label>Seviye Değerini Giriniz:</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" name="y" placeholder="Seviye Değerini Giriniz..">
                                    </div>
                                    
                                    <button type="submit" class="btn btn-info">Sorgula</button>
                                </form>

                            </div>
                        </section>
                    </div>
                </div>
            </section>
        </section>

        
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2018 &copy; Fuzzy Logic by Mehmet ÖZÇELİK & Fatih KARAÜZÜM               
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/js/respond.min.js"></script>
    <!--<script src="/Content/js/jquery.nicescroll.js" type="text/javascript"></script>-->
    <!--common script for all pages-->
    <script src="/Content/js/common-scripts.js"></script>


</body>
</html>

