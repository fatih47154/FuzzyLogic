<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        window.onload = function () {


            var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                title: {
                    text: "Sıcaklık"
                },
                toolTip: {
                    shared: true
                },
                data: [{
                        type: "line",
                        name: "Çok Düşük",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints1)
                    },
                    {
                        type: "line",
                        name: "Düşük",
                        showInLegend: true,
                        dataPoints: @Html.Raw(ViewBag.DataPoints2)
                    }, {
